{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "alwaysStrict": true,
    "allowJs": true,
    "jsx": "react",
    "removeComments": true,
    "experimentalDecorators": true,
    "lib": [
      "es6", "dom"
    ],
    "paths": {
      "model": ["src/app/model"],
      "HTTPAPI": ["src/app/HTTPAPI"],
      "container": ["src/app/container"],
      "Basic": ["src/app/components/Basic"],
      "state-react-router": ["src/app/state-react-router"],
      "queries": ["src/app/queries"],
      "commands": ["src/app/commands"],
      "transitions": ["src/app/transitions"],
      "*": [
        "src/app/components/Basic/*",
        "src/app/components/*",
        "src/app/routes/*",
        "src/app/*",
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
