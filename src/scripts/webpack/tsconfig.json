{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "allowJs": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "jsx": "react",
    "removeComments": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src", "typings"],
  "exclude": ["node_modules", "test/template-app"]
}
