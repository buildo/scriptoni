{
  "name": "scriptoni",
  "version": "3.0.0",
  "files": [
    "lib",
    "bin"
  ],
  "description": "Configuration and scripts for buildo React apps",
  "main": "./bin/scriptoni.js",
  "bin": {
    "scriptoni": "./bin/scriptoni.js"
  },
  "scripts": {
    "build": "rimraf lib/* && tsc && yarn copy-files",
    "copy-files": "ts-node ./copy-files.ts",
    "lint-style": "node bin/scriptoni.js lint-style",
    "lint-style-fix": "node bin/scriptoni.js lint-style-fix",
    "metarpheus": "node bin/scriptoni.js metarpheus",
    "metarpheus-diff": "node bin/scriptoni.js metarpheus-diff",
    "test": "NODE_ENV= jest --runInBand",
    "preversion": "yarn test",
    "prepublish": "yarn build",
    "release-version": "smooth-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buildo/scriptoni.git"
  },
  "author": "Andrea Ascari <andrea.ascari@buildo.io> (https://github.com/ascariandrea)",
  "contributors": [
    "Francesco Negri <francesco.negri@buildo.io> (https://github.com/dhinus)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buildo/scriptoni/issues"
  },
  "homepage": "https://github.com/buildo/scriptoni#readme",
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/compression-webpack-plugin": "^0.4.2",
    "@types/debug": "^0.0.31",
    "@types/diff": "^3.5.2",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.118",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/minimist": "^1.2.0",
    "@types/node": "^10.0.8",
    "@types/rimraf": "^2.0.2",
    "@types/uglifyjs-webpack-plugin": "^1.1.0",
    "@types/webpack": "^4.4.19",
    "@types/webpack-bundle-analyzer": "^2.13.0",
    "@types/webpack-dev-server": "^3.1.1",
    "@types/webpack-fail-plugin": "^1.0.7",
    "jest": "^23.5.0",
    "smooth-release": "^8.0.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^7.0.1"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.1.4",
    "babel-preset-buildo": "^0.1.1",
    "chalk": "^2.4.1",
    "compression-webpack-plugin": "^1.1.11",
    "css-loader": "^0.28.4",
    "debug": "^2.2.0",
    "diff": "^3.0.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "io-ts": "^1.4.1",
    "metarpheus": "^1.0.0",
    "metarpheus-io-ts": "^0.7.0",
    "mini-css-extract-plugin": "^0.4.2",
    "minimist": "^1.2.0",
    "node-glob": "^1.2.0",
    "node-sass": "^4.5.2",
    "postcss": "^5.2.15",
    "postcss-scss": "^0.4.1",
    "prettier": "^1.14.2",
    "progress": "^1.1.8",
    "progress-bar-webpack-plugin": "^1.10.0",
    "request": "^2.75.0",
    "request-promise": "^4.1.1",
    "resolve-url-loader": "^2.1.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "sass-variables-loader": "^0.1.3",
    "style-loader": "^0.21.0",
    "svg-react-loader": "^0.4.4",
    "ts-loader": "^5.3.1",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^1.2.3",
    "virtual-module-webpack-plugin": "^0.4.0",
    "webpack": "^4.7.0",
    "webpack-bundle-analyzer": "^3.0.2",
    "webpack-dev-server": "^3.1.4",
    "webpack-fail-plugin": "^2.0.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globalSetup": "<rootDir>/test/globalSetup.js"
  }
}
