    "lint": "babel-node bin/scriptoni.js lint",
    "metarpheus": "babel-node bin/scriptoni.js metarpheus",
    "metarpheus-diff": "babel-node bin/scriptoni.js metarpheus-diff",
    "test": "echo \"Error: no test specified\" && exit 1",
